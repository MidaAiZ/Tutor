<div class='box-header'>
	<h2>Students</h2>
	<%= link_to 'more', students_path, class: ['more btn-primary'] %>
</div>
<div class='box-body'>
	<table class='table .table-hover'>
		<thead>
			<tr class='tr'>
				<td class='td'>Name</td>
				<td class='td'>sex</td>
				<td class='td'>address</td>
				<td class='td'>subject</td>
			</tr>
		</thead>
		<tbody>
			<ul class='students-collection'>
				<% if !@students.nil? %>
				 <% @students.each do |student| %>
					<li class='students-list'>
						<tr class='vertical-middle'>
							<td><%= student.name%></td>
							<td><%= student.sex%></td>
							<td><%= student.address%></td>
							<td><%= student.school%></td>
							<td><%= link_to 'View', student, class: ['btn btn-sm btn-primary']%></td>
						</tr>
					</li>
				<% end %>
			 <% end %>
			</ul>
		</tbody>
	</table>
</div>
