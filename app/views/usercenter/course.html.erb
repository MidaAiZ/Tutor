<p id="notice"><%= notice %></p>
<button class='back btn btn-sm btn-primary' role='back'>Back</button>
<div class='course-info'>
	<div class='course-info info-box'>
		<div class='ico-box'>
			<%=  image_tag 'index/avatar.jpg', class: ['info-ico'] %>
			<br>
			<span class='label label-success'><%= set_course_stage @course.stage %></span>
		</div>
		<ul class='fix-ico-right'>
			<li class='fix-item'>
				<span>课程名：</span>
				<span><%= @course.name%></span>
			</li>
			<li class='fix-item'>
				<span>讲师：</span>
				<span><%= link_to @course.teacher.name || @course.teacher.account.number, @course.teacher %></span>
			</li>
			<li class='fix-item'>
				<span>课程类型：</span>
				<span><%= @course.category %></span>
			</li>
			<li class='fix-item'>
				<span>开班日期:</span>
				<span><%= @course.begintime %></span>
			</li>
			<li class='fix-item'>
				<span>地点:</span>
				<span><%= @course.place %></span>
			</li>
			<li class='fix-item'>
				<span>上课时间:</span>
				<span><%= @course.class_time %></span>
			</li>
			<li class='fix-item'>
				<span>课时数:</span>
				<span><%= @course.is_public %></span>
			</li>
			<li class='fix-item'>
				<span>课程评分:</span>
				<span><%= @course.score %></span>
			</li>
			<li class='fix-item'>
				<span>价格:</span>
				<span><%= @course.price %></span>
			</li>
		</ul>
	</div>
</div>
<div class='intro-box'>
	<div class='intro-head'>
		<span>课程介绍</span>
	</div>
	<div class='intro-content'>
		<span><%= @course.intro %>假装是课程介绍</span>
	</div>
</div>
<% if !@comment.id.nil? %>
<div class='comment-box'>
	<div class='comment-head'>
		<span>我的评价</span>
	</div>
	<div class='comment-content'>
		<div class='fix-left'>
			<div class="field">
				<span>教学态度</span>
				<div class='stars'>
					<% if  @comment.manner.nil? %>
					未评星
				<% else %>
					<% $i = 1 %>
					<% while $i <= 5 do %>
					<span class='glyphicon<%= $i <= @comment.manner ? ' glyphicon-star' : ' glyphicon-star-empty'%> '></span>
					<% $i+= 1 %>
					<% end %>
					<% end %>
				</div>
			</div>
			<div class="field">
				<span>教学水平</span>
				<div class='stars'>
					<% if  @comment.level.nil? %>
					未评星
				<% else %>
					<% $i = 1 %>
					<% while $i <= 5 do %>
					<span class='glyphicon<%= $i <= @comment.level ? ' glyphicon-star' : ' glyphicon-star-empty'%> '></span>
					<% $i+= 1 %>
					<% end %>
					<% end %>
				</div>
			</div>
			<div class="field">
				<span>授课方式</span>
				<div class='stars'>
					<% if  @comment.pattern.nil? %>
					未评星
				<% else %>
					<% $i = 1 %>
					<% while $i <= 5 do %>
					<span class='glyphicon<%= $i <= @comment.pattern ? ' glyphicon-star' : ' glyphicon-star-empty'%> '></span>
					<% $i+= 1 %>
					<% end %>
					<% end %>
				</div>
			</div>
		</div>
		<div class='contents'>
			<p>评价</p>
			<span><%= @comment.content%></span>
		</div>
	</div>
</div>
<% end %>

<% if @course.stage == 'finish' && @comment.id.nil? %>
<button data-toggle='modal' , data-target='#comment' class='btn btn-success'>评价</button>

<div class="modal fade" id="comment" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">
					<span aria-hidden="true">&times;</span>
					<span class="sr-only">Close</span>
				</button>
				<h4 class="modal-title" id="myModalLabel">评论</h4>
			</div>
			<div class="modal-body">
				<%= form_for @comment do |f|%>
				<%= f.hidden_field :course_id, value: @course.id %>
				<div class='form-body'>
					<div class='fix-center'>
						<div class="field">
							<%= f.label :mark %>
							<%= f.hidden_field :mark %>
							<div class='mark-star'>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
							</div>
						</div>
						<div class="field">
							<%= f.label :manner %>
							<%= f.hidden_field :manner %>
							<div class='mark-star'>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
							</div>
						</div>
						<div class="field">
							<%= f.label :level %>
							<%= f.hidden_field :level %>
							<div class='mark-star'>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
							</div>
						</div>
						<div class="field">
							<%= f.label :pattern %>
							<%= f.hidden_field :pattern %>
							<div class='mark-star'>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
								<span class='glyphicon glyphicon-star-empty' role='mark'></span>
							</div>
						</div>
					</div>
					<div class="field">
						<textarea name="comment[content]" placeholder="请输入评论"></textarea>
					</div>
				</br>
				<div class='form-footer'>
					<div class="actions">
						<button class="btn btn-danger" data-dismiss='modal'>取消</button>
						<button class='btn btn-primary' type="submit">提交</button>
					</div>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>
<% elsif @course.stage == 'ongoing' %>
<label class='label btn-danger'>Tips:完成课程后即可进行评价</label>
<% end %>
