<%= render 'menu_tab' %>

<div class='courses_panel'>
	<%= render 'course_tab' %>
	<div class='tab-content course-content'>
	  <% stage = Array['all', 'waiting', 'ongoing', 'finished'] %>
  	  <% stage.each do |s| %>
  		<table id='<%= s %>' class="table tab-pane<%= ' active' if s == 'all' %>" role="tabpanel">
  			<thead>
  				<tr>
  					<td>name</td>
  					<td>student</td>
  					<td>type</td>
  					<td><%= s %></td>
  				</tr>
  			</thead>
  			<tbody>
  			   <% if !@courses.nil? %>
  				 <% @courses.each do |c| %>
  				   <% if c.stage == s || s == 'all' %>
  				     <tr>
  					  <td><%= c.name %></td>
  				      <td><% c.students.each do |s| %><%= s.id %><% end %></td>
  					  <td><%= c.category %></td>
  					  <td><%= link_to 'è¯¦æƒ…', teacenter_course_path(c), class: [:btn, 'btn-primary'] %></td>
  				     </tr>
  				   <% end %>
  				 <% end %>
  			   <% end %>
  			</tbody>
  		</table>
       <% end %>
	</div>
</div>
