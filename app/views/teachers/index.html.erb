<p id="notice"><%= notice %></p>

<div class='box-header'>
	<h2>Teachers</h2>
</div>

<%= render 'layouts/sercher' %>

<div class='box-body'>
	<ul class='collection'>
		<% if !@teachers.nil? %>
		 <% @teachers.each do |teacher| %>
			 <li class='list-item teacher'>
				<a href="<%= teacher_path(teacher) %>"><%=  image_tag 'index/avatar.jpg' %></a>
	 			<div class='information'><%= teacher.name %></div>
	 		</li>
		 <% end %>
		 <% end %>
	</ul>
</div>

<br>
