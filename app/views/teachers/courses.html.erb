<table class='table .table-hover'>
    <thead>
        <tr class='tr'>
            <td class='td'>Name</td>
            <td class='td'>category</td>
            <td class='td'>begin</td>
            <td class='td'>price</td>
            <td class='td'>place</td>
        </tr>
    </thead>
    <tbody>
        <ul class='students-collection'>
            <% if !@courses.nil? %>
             <% @courses.each do |c| %>
                <li class='students-list'>
                    <tr class='vertical-middle'>
                        <td><%= c.name %></td>
                        <td><%= c.category %></td>
                        <td><%= c.begintime %></td>
                        <td><%= c.price %></td>
                        <td><%= c.place %></td>
                        <td><%= link_to 'View', course_path(c), class: ['btn btn-sm btn-primary']%></td>
                    </tr>
                </li>
            <% end %>
         <% end %>
        </ul>
    </tbody>
</table>
